using System;

namespace ConcatenateData
{
    class Program
    {
        static void Main(string[] args)
        {
            string architectName = Console.ReadLine();
            int projectsCount = int.Parse(Console.ReadLine());

            int hoursCount = projectsCount * 3;

            string stroutput = $"The architect {architectName} will need {hoursCount} hours to complete {projectsCount} project/s." ;
            Console.WriteLine(stroutput);


        }
    }
}
